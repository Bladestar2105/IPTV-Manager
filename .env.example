# Server Configuration
PORT=3000

# Security Configuration
# JWT_SECRET: Secret used for signing JSON Web Tokens. Change this to a strong random string.
JWT_SECRET=your_jwt_secret_here
# JWT_EXPIRES_IN: Token expiration time (e.g., 24h, 7d).
JWT_EXPIRES_IN=24h
# BCRYPT_ROUNDS: Cost factor for password hashing (higher is safer but slower).
BCRYPT_ROUNDS=10

# Encryption Key for Provider Passwords
# Must be a 32-byte (64 character) hex string.
# If not set, a key is generated in secret.key.
ENCRYPTION_KEY=

# CORS Configuration
ALLOWED_ORIGINS=*

# Initial Admin User Setup
# If set, this password will be used for the default 'admin' user created on first run.
# Otherwise, a random password will be generated and printed to the console.
INITIAL_ADMIN_PASSWORD=
